{
	"compilerOptions": {
		"target": "ES2022",
		"baseUrl": "./",
		"experimentalDecorators": true,
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./*"],
			// Feature-based architecture (FAANG best practice)
			"@_features/*": ["app/_features/*"],
			"@_core": ["app/_core"],
			"@_core/*": ["app/_core/*"],
			"@_lib": ["app/_lib"],
			"@_lib/*": ["app/_lib/*"],
			"@_shared": ["app/_shared"],
			"@_shared/*": ["app/_shared/*"],
			// Domain & UI paths (not feature-specific)
			"@_classes/*": ["app/_classes/*"],
			"@_components/*": ["app/_components/*"],
			"@_types/*": ["app/_types/*"],
			"@_helpers/*": ["app/_helpers/*"],
			"@_scripts/*": ["app/_scripts/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules", "src.backup*", ".next"]
}
